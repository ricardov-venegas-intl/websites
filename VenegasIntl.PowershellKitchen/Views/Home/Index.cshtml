@{
    Layout = null;
}
@model IEnumerable<BlogEntry>

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Powershell Kitchen</title>

	<!-- Meta -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Blog Template">
	<meta name="author" content="Xiaoying Riley at 3rd Wave Media">
	<link rel="shortcut icon" href="favicon.ico">

	<!-- FontAwesome JS-->
	<script defer src="pwshk-assets/fontawesome/js/all.min.js"></script>

	<!-- Theme CSS -->
	<link id="theme-style" rel="stylesheet" href="pwshk-assets/css/theme-3.css">

</head>

<body>

	<header class="header text-center">
		<h1 class="blog-name pt-lg-4 mb-0"><a class="no-text-decoration" href="index.html">Powershell Kitchen</a></h1>

		<nav class="navbar navbar-expand-lg navbar-dark">

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div id="navigation" class="collapse navbar-collapse flex-column">
				<div class="profile-section pt-3 pt-lg-0">
					<img class="profile-image mb-3 rounded-circle mx-auto" src="pwshk-assets/images/profile.png" alt="image">

					<div class="bio mb-3">Welcome to Powershell Kitchen, your one-stop source for PowerShell scripts and examples.</div><!--//bio-->
				</div><!--//profile-section-->
			</div>
		</nav>
	</header>

	<div class="main-wrapper">

		<section class="cta-section theme-bg-light py-5">
			<div class="container text-center single-col-max-width">
				<h2 class="heading">Powershell kitchen</h2>
				<div class="intro">Whether you are a beginner or an expert, you will find something useful and interesting here. PowerShell Kitchen is a website that provides practical and easy-to-follow solutions for common tasks and challenges using PowerShell</div>				
			</div><!--//container-->
		</section>


		<section class="blog-list px-3 py-5 p-md-5">
			<div class="container single-col-max-width">
				@foreach(var entry in Model)
				{
				<div class="item mb-5">
					<div class="row g-3 g-xl-0">
						<div class="col-2 col-xl-3">
							<img class="img-fluid post-thumb " src="pwshk-assets/images/blog/blog-post-thumb-1.jpg" alt="image">
						</div>
						<div class="col">
								<h3 class="title mb-1"><a class="text-link" href="Home/BlogPost/@entry.Name">@entry.Title</a></h3>
							@*<div class="meta mb-1"><span class="date">Published 2 days ago</span><span class="time">5 min read</span><span class="comment"><a class="text-link" href="#">8 comments</a></span></div>*@
							<div class="intro">@entry.Summary</div>
								<a class="text-link" href="Home/BlogPost/@entry.Name">Read more &rarr;</a>
						</div><!--//col-->
					</div><!--//row-->
				</div><!--//item-->
					}
			</div>
		</section>

		<footer class="footer text-center py-2 theme-bg-dark">
			<div style="display:none">
			<!--/* This template is free as long as you keep the footer attribution link. If you'd like to use the template without the attribution link, you can buy the commercial license via our website: themes.3rdwavemedia.com Thank you for your support. :) */-->
			<small class="copyright">Designed with <span class="sr-only">love</span><i class="fas fa-heart" style="color: #fb866a;"></i> by <a href="https://themes.3rdwavemedia.com" target="_blank">Xiaoying Riley</a> for developers</small>
			</div>

		</footer>

	</div><!--//main-wrapper-->
	<!-- Javascript -->
	<script src="pwshk-assets/plugins/popper.min.js"></script>
	<script src="pwshk-assets/plugins/bootstrap/js/bootstrap.min.js"></script>



</body>
</html>

